extends /layout/_base.pug

append vars
  -
    meta = Object.assign(meta, {
      title: "ホーム"
    });

    const leftNavs = [
      { url: '#', label: '特長', },
      { url: '#', label: '得意分野', },
      { url: '#', label: 'メニュー', },
      { url: '#', label: '実績', },
      { url: '#', label: 'ブログ', },
      { url: '#', label: '会社紹介', },
      { url: '#', label: '採用情報', },
    ];

    const rightNavs = [
      { url: '#', label: '会社案内ダウンロード', },
      { url: '#', label: 'お問い合わせ', },
    ];

    const cases = [
      {label: 'すると彼らは'},
      {label: '私が陸へ上がって'},
      {label: '先生が昨日のように'},
      {label: 'すぐ手拭で頭を包んで'},
      {label: 'それで私の目的は'},
      {label: '比較的広々した所へ来ると'},
      {label: 'すると彼らは'},
      {label: '私が陸へ上がって'},
      {label: '先生が昨日のように'},
      {label: 'すぐ手拭で頭を包んで'},
      {label: 'それで私の目的は'},
      {label: '比較的広々した所へ来ると'},
    ];

    const main = {
      copy: {
        sub: ['こころ', '&nbsp;', '夏目漱石'],
        main: ['私は', 'その人を', '常に', '先生と', '呼んでいた。']
      },
      lead: {
        first: [
          ['だから', 'ここでも', 'ただ', '先生と', '書くだけで', '本名は', '打ち明け', 'ない。'],
          ['これは', '世間を', '憚かる', '遠慮と', 'いう', 'よりも、'],
          ['その方が', '私に', 'とって', '自然', 'だから', 'である。']
        ],
        second: [
          ['私は', 'その人の', '記憶を', '呼び起す', 'ごとに、'],
          ['すぐ', '「先生」と', 'いいたく', 'なる。', '筆を', '執っても', '心持は', '同じ事', 'である。'],
          ['よそよそしい', '頭文字などは', 'とても', '使う気に', 'ならない。']
        ]
      },
      button: ['私は', '一人', '取り', '残され', 'た。']
    }

append head
  link(rel="stylesheet", href="/common/css/home.css")

append body
  header.c-section.-header
    .c-section__inner.-maw_m
      nav.l-header
        .l-header__col
          .l-header__col-inner
            a(href="/").l-header__logo
              img(
                src="https://placehold.jp/78x32.png" alt="ロゴ"
              ).l-header__logo-img

        .l-header__col.-nav
          .l-header__col-inner
            .l-header__navs
              each nav in leftNavs
                - const {url, label} = nav;
                a(href=url).l-header__nav
                  .l-header__nav-inner #{label}

        .l-header__col.-nav
          .l-header__col-inner
            .l-header__navs
              each nav in rightNavs
                - const {url, label} = nav;
                a(href=url).l-header__nav
                  .l-header__nav-inner #{label}

        .l-header__col.-menu
          .l-header__col-inner
            button(type="button")
              span.u-visually-hidden メニュー

        .l-header__drawer
          .l-header__drawer-inner
            -
              const spNavs = [
                {url: '/', label: 'ホーム'}
              ].concat(leftNavs, rightNavs);

            each nav in spNavs
              - const {url, label} = nav;
              a(href=url).l-header__drawer-row
                .l-header__drawer-row-inner #{label}

  main
    .c-section
      .c-section__inner.-maw_m
        .p-home-top
          .p-home-top__text-box
            .p-home-top__sub-copy
              +noBreak(main.copy.sub)

            .p-home-top__main-copy
              +noBreak(main.copy.main)

            .p-home-top__lead
              .p-home-top__lead-text
                each words, i in main.lead.first
                  +noBreak(words)

              .p-home-top__lead-text
                each words, i in main.lead.second
                  +noBreak(words)

            .p-home-top__button
              a(href="#").c-button
                .c-button__inner
                  .c-button__text
                    +noBreak(main.button)

          .p-home-top__img-box
            .p-home-top__img-box-inner
              img.p-home-top__img(src="https://placehold.jp/800x600.png")

    .c-section
      .c-section__inner.-maw_m
        .p-home-reason
          .p-home-reason__bg-box
            img(src="https://placehold.jp/1350x500.png" alt="").p-home-reason__bg
          .p-home-reason__inner
            .p-home-reason__text-box
              .p-home-reason__heading
                +noBreak(
                  [ '暑中休暇を', '利用して', '海水浴に', '行った']
                )

              .p-home-reason__desc
                p.p-home-reason__sentence
                  | 宿は鎌倉でも辺鄙な方角にあった。玉突きだのアイスクリームだのというハイカラなものには長い畷を一つ越さなければ手が届かなかった。車で行っても二十銭は取られた。けれども個人の別荘はそこここにいくつでも建てられていた。それに海へはごく近いので海水浴をやるには至極便利な地位を占めていた。

                p.p-home-reason__sentence
                  | 私は毎日海へはいりに出掛けた。古い燻ぶり返った藁葺の間を通り抜けて磯へ下りると、この辺にこれほどの都会人種が住んでいるかと思うほど、避暑に来た男や女で砂の上が動いていた。ある時は海の中が銭湯のように黒い頭でごちゃごちゃしている事もあった。その中に知った人を一人ももたない私も、こういう賑やかな景色の中に裹まれて、砂の上に寝そべってみたり、膝頭を波に打たしてそこいらを跳ね廻るのは愉快であった。

    .c-section
      .c-section__inner.-maw_m.-pt_1.-pb_1
        section.p-home-section
          .p-home-section__heading
            +noBreak(['すぐ', '私の', '注意を', '惹いた'])

          .p-home-section__sub-heading.-mt_1 先生と私
          .p-home-section__body
            .c-col.-min_300.-gap_1
              .c-col__item hoge
              .c-col__item fuga
              .c-col__item piyo
              .c-col__item hogehoge

        section.p-home-section
          .p-home-section__heading
            +noBreak(['わざと', '避けて', '東京の', '近くで'])

          .p-home-section__sub-heading.-mt_1 せっかく来た私
          .p-home-section__body
            .c-col.-min_300.-gap_1
              each the_case in cases
                - const {label} = the_case;
                .c-col__item
                  a(href="#").c-img-block
                    .c-img-block__inner
                      img(
                        src="https://placehold.jp/340x170.png"
                        alt=""
                      ).c-img-block__img

                    .c-img-block__hover
                      .c-img-block__hover-inner
                        img(
                          src="https://placehold.jp/cc9999/993333/40x40.png"
                          alt=""
                        ).c-img-block__hover-icon
                        .c-img-block__hover-text 詳しく見る

                  .c-block.-lv_4
                    .c-text.u-bold #{label}

                  .c-block.-lv_2
                    a(href="#").c-text.-s.c-prefix-right-hover
                      span.c-prefix-right
                        span.c-prefix-right__icon
                        span.c-prefix-right__text 詳しく見る
          .p-home-section__button
            a(href="#").c-button.-white
              .c-button__inner.-thin
                .c-button__text 東京の近く

        section.p-home-section
          .p-home-section__heading
            +noBreak(['彼は', '電報を', '私に', '見せて'])

          .p-home-section__sub-heading.-mt_1 一人ぼっちになった
          .p-home-section__body

        section.p-home-section
          .p-home-section__heading
            +noBreak(['私が', 'その', '掛茶屋で'])

          .p-home-section__sub-heading.-mt_1 先生を見た時は
          .p-home-section__body
